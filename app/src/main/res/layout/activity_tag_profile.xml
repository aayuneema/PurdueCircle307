<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".TagProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tag_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:hint="Tag"
                android:padding="30dp"
                android:text="#Blessed"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/follow_tag_btn"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tag_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:text="Follow"
                android:textSize="16sp"
                app:background="@android:color/holo_green_dark"
                app:backgroundTint="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/view_tag_posts"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_tag_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="View Posts"
                android:textSize="16sp"
                app:background="@android:color/holo_green_dark"
                app:backgroundTint="@android:color/holo_green_dark" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>